<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.mozilla.hackathon.twigamsituni.datausage.TrafficStatsSummaryActivity"
    android:background="@color/app_white">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/traffic_stats_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/ic_input_add" />

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/primary_color"
        android:orientation="vertical">

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/stats_summary"
            android:layout_width="match_parent"
            android:layout_height="150dip"
            />

        <com.appyvet.rangebar.RangeBar
            android:id="@+id/time_range"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            custom:connectingLineColor="@color/range_bar_connecting"
            custom:connectingLineWeight="2dp"
            custom:tickHeight="0dp"
            custom:pinRadius="5dp"
            custom:rangeBar="false"
            custom:selectorColor="@color/app_white"
            custom:selectorSize="15dp"
            custom:barWeight="2dp"
            custom:tickStart="0"
            custom:tickInterval="1"
            custom:tickEnd="100"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</FrameLayout>
